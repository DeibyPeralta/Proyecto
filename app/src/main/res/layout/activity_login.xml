<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/riox"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="292dp"
        android:layout_marginTop="200dp"
        android:background="#42000000"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="9dp">


        <EditText
            android:id="@+id/mailx"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#ffff"
            android:gravity="center"
            android:hint="@string/textCorreo"
            android:inputType="text"
            android:textColor="#0C0B0B"
            android:textColorHint="#0C0B0B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/contraseÃ±ax"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:background="#ffff"
            android:gravity="center"
            android:hint="@string/textClave"
            android:inputType="textPassword"
            android:password="true"
            android:textColor="#0C0B0B"
            android:textColorHint="#0C0B0B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mailx" />

        <Button
            android:id="@+id/logear"
            android:layout_width="193dp"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="102dp"
            android:layout_marginLeft="102dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/boton_redondo"
            android:onClick="buscarDatos"
            android:text="@string/iniciarSesion"
            android:textColor="#ffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/restablecerx"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="105dp"
            android:layout_marginLeft="113dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="114dp"
            android:onClick="Restablecerx"
            android:text="@string/olvidoPass"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logear" />

        <Button
            android:id="@+id/registrarse"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="141dp"
            android:layout_marginEnd="141dp"
            android:onClick="registro"
            android:background="@drawable/boton_redondo"
            android:text="Registrarse"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textColorHint="@color/common_google_signin_btn_text_dark_pressed"
            tools:ignore="MissingConstraints" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="96dp"
        android:layout_height="89dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.434"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login" />

</androidx.constraintlayout.widget.ConstraintLayout>